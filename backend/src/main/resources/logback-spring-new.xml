<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <!-- Define properties -->
    <springProfile name="!azure">
        <property name="LOG_PATH" value="./logs"/>
    </springProfile>
    <springProfile name="azure">
        <property name="LOG_PATH" value="/tmp/logs"/>
    </springProfile>
    
    <!-- Console Appender -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level [%X{correlationId}] %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- File Appender for Development -->
    <springProfile name="local,docker">
        <appender name="DEV_FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
            <file>${LOG_PATH}/application.log</file>
            <encoder>
                <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level [%X{correlationId}] %logger{36} - %msg%n</pattern>
            </encoder>
            <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
                <fileNamePattern>${LOG_PATH}/application.%d{yyyy-MM-dd}.%i.log</fileNamePattern>
                <maxFileSize>50MB</maxFileSize>
                <maxHistory>7</maxHistory>
                <totalSizeCap>500MB</totalSizeCap>
            </rollingPolicy>
        </appender>

        <!-- Security file for development -->
        <appender name="DEV_SECURITY_FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
            <file>${LOG_PATH}/security.log</file>
            <encoder>
                <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level [%X{correlationId}] %logger{36} - %msg%n</pattern>
            </encoder>
            <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
                <fileNamePattern>${LOG_PATH}/security.%d{yyyy-MM-dd}.%i.log</fileNamePattern>
                <maxFileSize>50MB</maxFileSize>
                <maxHistory>7</maxHistory>
                <totalSizeCap>200MB</totalSizeCap>
            </rollingPolicy>
        </appender>
    </springProfile>
    
    <!-- Production File Appender with JSON -->
    <springProfile name="azure">
        <appender name="PROD_FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
            <file>${LOG_PATH}/application.log</file>
            <encoder class="net.logstash.logback.encoder.LogstashEncoder">
                <includeContext>true</includeContext>
                <includeMdc>true</includeMdc>
                <customFields>{"application":"FindTheOne"}</customFields>
            </encoder>
            <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
                <fileNamePattern>${LOG_PATH}/application.%d{yyyy-MM-dd}.%i.log</fileNamePattern>
                <maxFileSize>100MB</maxFileSize>
                <maxHistory>30</maxHistory>
                <totalSizeCap>2GB</totalSizeCap>
            </rollingPolicy>
        </appender>

        <appender name="PROD_SECURITY_FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
            <file>${LOG_PATH}/security.log</file>
            <encoder class="net.logstash.logback.encoder.LogstashEncoder">
                <includeContext>true</includeContext>
                <includeMdc>true</includeMdc>
                <customFields>{"application":"FindTheOne","type":"security"}</customFields>
            </encoder>
            <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
                <fileNamePattern>${LOG_PATH}/security.%d{yyyy-MM-dd}.%i.log</fileNamePattern>
                <maxFileSize>50MB</maxFileSize>
                <maxHistory>90</maxHistory>
                <totalSizeCap>1GB</totalSizeCap>
            </rollingPolicy>
        </appender>
    </springProfile>
    
    <!-- Logger Configurations -->
    
    <!-- Application Loggers for Development -->
    <springProfile name="local,docker">
        <logger name="com.findtheone" level="DEBUG" additivity="false">
            <appender-ref ref="CONSOLE"/>
            <appender-ref ref="DEV_FILE"/>
        </logger>
        
        <logger name="com.findtheone.security" level="DEBUG" additivity="false">
            <appender-ref ref="CONSOLE"/>
            <appender-ref ref="DEV_SECURITY_FILE"/>
        </logger>
        
        <logger name="com.findtheone.controller.AuthController" level="INFO" additivity="false">
            <appender-ref ref="CONSOLE"/>
            <appender-ref ref="DEV_FILE"/>
            <appender-ref ref="DEV_SECURITY_FILE"/>
        </logger>
    </springProfile>
    
    <!-- Application Loggers for Production -->
    <springProfile name="azure">
        <logger name="com.findtheone" level="INFO" additivity="false">
            <appender-ref ref="PROD_FILE"/>
        </logger>
        
        <logger name="com.findtheone.security" level="WARN" additivity="false">
            <appender-ref ref="PROD_SECURITY_FILE"/>
        </logger>
        
        <logger name="com.findtheone.controller.AuthController" level="INFO" additivity="false">
            <appender-ref ref="PROD_FILE"/>
            <appender-ref ref="PROD_SECURITY_FILE"/>
        </logger>
    </springProfile>
    
    <!-- Third-party Library Loggers -->
    <logger name="org.springframework.security" level="WARN"/>
    <logger name="org.springframework.web" level="WARN"/>
    <logger name="org.springframework.boot.actuate" level="WARN"/>
    <logger name="com.mysql" level="WARN"/>
    <logger name="com.zaxxer.hikari" level="WARN"/>
    <logger name="io.jsonwebtoken" level="WARN"/>
    
    <!-- Root Logger -->
    <springProfile name="local,docker">
        <root level="INFO">
            <appender-ref ref="CONSOLE"/>
            <appender-ref ref="DEV_FILE"/>
        </root>
    </springProfile>
    
    <springProfile name="azure">
        <root level="WARN">
            <appender-ref ref="PROD_FILE"/>
        </root>
    </springProfile>
    
</configuration>
