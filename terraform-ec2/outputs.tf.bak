# Output the public IP address of the instance
output "instance_public_ip" {
  description = "Public IP address of the EC2 instance"
  value       = aws_eip.findtheone_eip.public_ip
}

# Output the instance ID
output "instance_id" {
  description = "ID of the EC2 instance"
  value       = aws_instance.findtheone_instance.id
}

# Output the Elastic IP allocation ID
output "elastic_ip_id" {
  description = "Allocation ID of the Elastic IP"
  value       = aws_eip.findtheone_eip.id
}

# Output the VPC ID
output "vpc_id" {
  description = "ID of the VPC"
  value       = aws_vpc.findtheone_vpc.id
}

# Output the security group ID
output "security_group_id" {
  description = "ID of the security group"
  value       = aws_security_group.findtheone_sg.id
}

# Output connection commands
output "ssh_connection_command" {
  description = "SSH command to connect to the instance"
  value       = "ssh -i ~/.ssh/${var.key_pair_name} ubuntu@${aws_eip.findtheone_eip.public_ip}"
}

output "application_urls" {
  description = "URLs to access the application"
  value = {
    frontend_url = "http://${aws_eip.findtheone_eip.public_ip}"
    backend_api  = "http://${aws_eip.findtheone_eip.public_ip}:8091/api"
    health_check = "http://${aws_eip.findtheone_eip.public_ip}:8091/api/test"
  }
}
